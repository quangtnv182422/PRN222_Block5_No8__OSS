@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Dashboard";
}

<!-- Start Page Content -->
<main class="bg-light">
    <div class="p-4">
        <div>
            <h1 class="mb-0 text-center mb-3">Dashboard</h1>
            <div class="d-flex justify-content-between gap-4">
                <div class="w-100">
                    <div class="card border-0 shadow p-4">
                        <div class="d-flex align-items-center">
                            <div>
                                <i class="bi bi-cash fs-3"></i>
                            </div>
                            <div class="flex-1 ms-4">
                                <h5 class="mb-0">12.345.678</h5>
                                <p class="text-muted mb-0">Average costs</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="w-100">
                    <div class="card border-0 shadow p-4">
                        <div class="d-flex align-items-center">
                            <div>
                                <i class="bi bi-person-fill fs-3"></i>
                            </div>
                            <div class="flex-1 ms-4">
                                <h5 class="mb-0">5</h5>
                                <p class="text-muted mb-0">New account</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow border-0 p-4 mt-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="align-items-center mb-0">Revenue of Year</h6>

                    <div class="mb-0 position-relative">
                        <select class="form-select form-control" id="yearchart">
                            <option selected>2024</option>
                            <option value="2023">2023</option>
                            <option value="2022">2022</option>
                        </select>
                    </div>
                </div>
                <div id="dashboard" class="apex-chart"></div>
            </div><!--end row-->
        </div><!--end container-->
    </div>
</main>