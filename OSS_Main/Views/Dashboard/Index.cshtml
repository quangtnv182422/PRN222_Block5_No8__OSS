@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Dashboard";
}

<main class="bg-light">
    <div class="p-4">
        <div>
            <h1 class="mb-0 text-center mb-3">Dashboard</h1>
            <div class="d-flex justify-content-between gap-4">
                <div class="w-100">
                    <div class="card border-0 shadow p-4">
                        <div class="d-flex align-items-center">
                            <div>
                                <i class="bi bi-cash fs-3"></i>
                            </div>
                            <div class="flex-1 ms-4">
                                <h4 class="mb-0 fw-bold">@ViewBag.TotalCosts</h4>
                                <p class="text-muted mb-0">Total Costs</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="w-100">
                    <div class="card border-0 shadow p-4">
                        <div class="d-flex align-items-center">
                            <div>
                                <i class="bi bi-box fs-3"></i>
                            </div>
                            <div class="flex-1 ms-4">
                                <h4 class="mb-0 fw-bold">@ViewBag.TotalProductTypes</h4>
                                <p class="text-muted mb-0">Total Products</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="w-100">
                    <div class="card border-0 shadow p-4">
                        <div class="d-flex align-items-center">
                            <div>
                                <i class="bi bi-person-fill fs-3"></i>
                            </div>
                            <div class="flex-1 ms-4">
                                <h4 class="mb-0 fw-bold">@ViewBag.TotalAccounts</h4>
                                <p class="text-muted mb-0">Total Accounts</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow border-0 p-4 mt-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="align-items-center mb-0">Revenue of Year</h6>
                    <div class="mb-0 position-relative">
                        <form method="get" id="revenueYear">
                            <select class="form-select form-control" onchange="changeValue()" name="RevenueYear">
                                @foreach (int year in ViewBag.OrderYears)
                                {
                                    <option value="@year" selected="@(ViewBag.RevenueYear == year)">@year</option>
                                }
                            </select>
                        </form>
                    </div>
                </div>
                <div id="dashboard" class="apex-chart"></div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        function changeValue(){
            document.getElementById("revenueYear").submit();
        }
        //data for each month in year
        const DATA_BAR_CHART = Array.from(@ViewBag.RevenueByMonth);
    </script>
    <script src="~/assets1/js/apexcharts.min.js"></script>
    <script src="~/assets1/js/columnchart.init.js"></script>
}